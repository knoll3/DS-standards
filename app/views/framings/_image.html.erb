<div class="jumbotron">
  <h2>Pages</h2>
  <p>Scroll with the arrows to see the standards of other companies.</p>
</div> 

<!--Carousel-->
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
  
  <!--Carousel Wrapper-->
  <div class="carousel-inner" role="listbox">
    <% @images.each do |image| %>
      <% class_text = image.url == @active_url ? "item active" : "item" %>
        <div class='<%= class_text %>'>
          <h3 id="pages-upper-text"><%= get_name_from image.url %>
          </h3>
          <%= link_to create_pdf_link(image), target: "_blank" do %>
            <%= image_tag(prepend_s3(image.url), { alt: image.url, 
                                                   class: "img-responsive"}) %>
          <% end %>
        </div>
    <% end %>
  </div>
  <!--/Carousel Wrapper-->

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  <!--/Left and right controls-->
</div>
<!--/Carousel-->