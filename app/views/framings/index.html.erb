<h1>Framings#index</h1>
<p>Find me in app/views/framing/index.html.erb</p>

<div class="container"></div>
  <div class="row">
    <div class="col-md-6">
      <input class="form-control" id="myInput" type="text" placeholder="Search..">
      <br>
      <div id="table-wrapper">
        <table class="table table-bordered table-striped table-hover" id="table">
          <thead>
            <tr>
              <% Framing.column_names.each do |column_name| %>
                <% if is_useful_column_name column_name %>
                  <th><%= column_name %></th>
                <% end %>
              <% end %>
            </tr>
          </thead>
          
          <tbody id="myTable">
            <% @framings.each do |framing| %>
                <tr onclick="location.href='#';" style="cursor:pointer;">
                  <% framing.attributes.each do |column_name, value| %>
                    <% if is_useful_column_name column_name %>
                      <td style='white-space:pre-wrap' class="col-md-2" id=<%= "value-#{column_name}" %>><%= value  %></td>
                    <% end %>
                  <% end %>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
    <!-- Image Slide -->
    <div class="col-md-6">
      <h2>Standards Page</h2>
      <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <% @images.each_with_index do |image, index| %>
            <% if index == 0 %>
              <div class="item active">
            <% else %>
              <div class="item">
            <% end %>
              <%= image_tag(image.url, alt: image.url, class: "img-responsive") %>
            </div>
          <% end %>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>
  